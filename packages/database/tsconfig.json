{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@codequal/database/*": ["./src/*"],
      "@codequal/core": ["../core/dist/index"],
      "@codequal/core/*": ["../core/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/__tests__/**"],
  "references": [
    { "path": "../core" }
  ]
}