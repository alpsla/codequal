{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "baseUrl": "../..",
    "paths": {
      "@codequal/database/*": ["packages/database/src/*"],
      "@codequal/core": ["packages/core/src"],
      "@codequal/core/*": ["packages/core/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/__tests__/**"],
  "references": [
    { "path": "../core" }
  ]
}