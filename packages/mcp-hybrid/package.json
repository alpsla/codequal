{
  "name": "@codequal/mcp-hybrid",
  "version": "1.0.0",
  "description": "MCP Hybrid Tool Integration System",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:all": "jest --config jest.config.all.js",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:ci": "jest --testPathIgnorePatterns='(real|integration|debug)\\.(test|spec)\\.ts$'",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:mcp": "jest src/adapters/mcp/__tests__",
    "test:direct": "jest src/adapters/direct/__tests__",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "@codequal/core": "file:../core",
    "@eslint/mcp": "^0.1.0",
    "axios": "^1.10.0",
    "better-npm-audit": "^3.7.0",
    "eslint-plugin-security": "^3.0.0",
    "eslint-plugin-sonarjs": "^0.25.0",
    "jscpd": "^4.0.5",
    "license-checker": "^25.0.1",
    "lighthouse": "^11.0.0",
    "madge": "^7.0.0",
    "node-fetch": "^2.7.0",
    "pg": "^8.16.3",
    "simple-git": "^3.22.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/jest": "^29.5.0",
    "@types/lru-cache": "^7.10.9",
    "@types/node": "^20.0.0",
    "dependency-cruiser": "^16.0.0",
    "jest": "^29.5.0",
    "jsonwebtoken": "^9.0.2",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  }
}
