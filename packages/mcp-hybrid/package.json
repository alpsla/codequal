{
  "name": "@codequal/mcp-hybrid",
  "version": "1.0.0",
  "description": "MCP Hybrid tool integration system for PR-focused analysis",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --skipLibCheck",
    "clean": "rm -rf dist",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "lint": "echo 'Skipping lint for mcp-hybrid due to dependency conflicts' && exit 0",
    "lint:ci": "eslint src --ext .ts --max-warnings 150",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit --skipLibCheck",
    "install-tools": "bash src/scripts/install-tools.sh",
    "verify-security": "bash src/scripts/verify-security.sh",
    "health-check": "bash src/scripts/health-check.sh",
    "type-check:strict": "tsc --noEmit --skipLibCheck false"
  },
  "keywords": [
    "mcp",
    "tools",
    "code-analysis",
    "pr-analysis",
    "codequal"
  ],
  "author": "CodeQual Team",
  "license": "MIT",
  "dependencies": {
    "@kubernetes/client-node": "^1.3.0",
    "@supabase/supabase-js": "^2.50.0",
    "@types/node": "^20.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@typescript-eslint/utils": "^8.34.0",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@codequal/core": "workspace:*"
  },
  "files": [
    "dist",
    "src/scripts"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
