{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@codequal/core": ["../core/dist"],
      "@codequal/core/*": ["../core/dist/*"],
      "@codequal/agents": ["./src"],
      "@codequal/agents/*": ["./src/*"],
      "@codequal/database": ["../database/dist"],
      "@codequal/database/*": ["../database/dist/*"],
      "@codequal/testing": ["../testing/dist"],
      "@codequal/testing/*": ["../testing/dist/*"],
      "@codequal/ui": ["../ui/dist"],
      "@codequal/ui/*": ["../ui/dist/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/__tests__/**",
    "**/_archive_*/**",
    "**/examples/**",
    "src/standard/tests/test-educator-integration.ts",
    "src/standard/tests/regression/manual-pr-validator-enhanced.ts"
  ],
  "references": [
    { "path": "../core" },
    { "path": "../database" }
  ]
}