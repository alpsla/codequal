{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "declaration": true,
      "declarationMap": true,
      "allowJs": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "typeRoots": ["./node_modules/@types", "../../node_modules/@types", "./src/types"],
      "paths": {
        "@codequal/agents/*": ["./src/*"],
        "@codequal/core": ["../core/src"],
        "@codequal/core/*": ["../core/src/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.bak", "**/*.bak*", "**/codewhisperer*", "**/examples/**", "**/_archive*/**"],
    "references": [
      { "path": "../core" }
    ]
  }