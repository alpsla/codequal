{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "composite": true,
      "declaration": true,
      "module": "CommonJS",
      "target": "ES2020",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "isolatedModules": true,
      "noEmitOnError": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
  }