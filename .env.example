# CodeQual Environment Configuration
# Copy this to .env and fill in your values

# Environment (development, staging, production)
NODE_ENV=development

# API Configuration
PORT=3001
API_URL=http://localhost:3001

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# OAuth Configuration
# Note: OAuth credentials are configured in Supabase Dashboard
# See: Authentication > Providers in your Supabase project
# The same OAuth apps are used for both dev and prod environments

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/codequal

# Redis (if using)
REDIS_URL=redis://localhost:6379

# Monitoring
SENTRY_DSN=
LOG_LEVEL=debug

# Feature Flags
ENABLE_GITHUB_AUTH=true
ENABLE_GITLAB_AUTH=true
ENABLE_EMAIL_AUTH=true

# Security
JWT_SECRET=your-jwt-secret
ENCRYPTION_KEY=your-encryption-key

# Email (if using)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@codequal.com

# Analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_GA_ID=

# Stripe (for billing)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=